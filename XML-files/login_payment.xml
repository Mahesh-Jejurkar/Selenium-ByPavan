<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">


<suite name="LoginAndPaymentSuite">
	<listeners>
		<listener class-name="testNG.Listeners"></listener>
	</listeners>

	<test name="LoginAndPaymentTest">
		<classes>
			<class name="testNG.Login">
				<methods>
					<include name="loginByEmail" />
					<include name="loginByFacebook" />
				</methods>
			</class>

			<class name="testNG.Payment">
				<methods>
					<exclude name="paymentInDoller" />
					<include name="paymentInRupees" />
				</methods>
			</class>

			<class name="testNG.PaymentReturn">
				<methods>
					<include name="paymentReturnByBank" />
				</methods>
			</class>

		</classes>
	</test>
</suite>				